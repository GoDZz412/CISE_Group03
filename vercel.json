{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/src/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/articles/(.*)",
      "dest": "backend/src/api/articles/$1" 
    },
    {
      "src": "/api/(.*)",  
      "dest": "backend/src/api/$1"  
    }
  ]
}
  